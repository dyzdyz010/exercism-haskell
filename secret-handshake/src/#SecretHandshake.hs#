module SecretHandshake (handshake) where

import Data.Bits(testBit)

handshake :: Int -> [String]
handshake n = 

handshake' :: Int -> Char -> (Int, String)
handshake' n digit = if digit == '1' then (n + 1, (case n of
    0 -> "wink"
    1 -> "double blink"
    2 -> "close your eyes"
    3 -> "jump"
    otherwise -> ""))
  else
    (n+1, "")
